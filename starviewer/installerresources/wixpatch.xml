<?xml version="1.0" encoding="UTF-8"?>

<CPackWiXPatch>
    <CPackWiXFragment Id="CM_SHORTCUT">
        <Shortcut Id="ca_manual" Name="Manual d'usuari (ca)" Target="[#CM_FP__ca__User_guide.pdf]"/>
        <Shortcut Id="en_manual" Name="User manual (en)" Target="[#CM_FP__en__User_guide.pdf]"/>
        <Shortcut Id="es_manual" Name="Manual de usuario (es)" Target="[#CM_FP__es__User_guide.pdf]"/>
    </CPackWiXFragment>

    <CPackWiXFragment Id="#PRODUCTFEATURE">
        <Component Id="UrlHandler" Guid="*" Directory="TARGETDIR">
            <RegistryKey Root="HKCR" Key="starviewer">
                <RegistryValue Type="string" Name="URL Protocol" Value="" KeyPath="yes"/>
                <RegistryKey Key="shell\open\command">
                    <RegistryValue Type="string" Value='"[#CM_FP_starviewer.exe]" --url "%1"'/>
                </RegistryKey>
            </RegistryKey>
        </Component>
    </CPackWiXFragment>
</CPackWiXPatch>
